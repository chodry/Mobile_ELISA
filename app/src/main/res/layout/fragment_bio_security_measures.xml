<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BioSecurityMeasures">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttons"
        android:layout_below="@id/toolbar"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:fadeScrollbars="true"
        android:padding="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="What are the Bio-Security measures on the farm?"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/workers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farm-workers are bio-security aware"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/fencing1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Double Fencing"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/fencing2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single Fencing"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/footwear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protective footwear"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foot Bath"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/isolation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isolation of incoming animals"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/artificial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artificial insemination"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/bull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On-farm bull"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/separate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Separate entry and exit points"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/othersText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_button"
                android:gravity="top"
                android:hint="Please provide any other bio-security measures"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button_2"
            android:text="Back"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/bg_button"
            android:text="next"
            android:textColor="@color/white"/>

    </RelativeLayout>


</RelativeLayout>