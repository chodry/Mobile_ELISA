<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Symptoms">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttons"
        android:layout_below="@id/toolbar"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:fadeScrollbars="true"
        android:padding="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Select the signs and symptoms"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/diarrhea1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bloody Diarrhea"
                android:textSize="14sp"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/diarrhea2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watery Diarrhea"
                android:textSize="14sp"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/frothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frothing"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/crowding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crowding"
                android:textSize="14sp"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/ulcerations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ulcerations"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/wounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wounds"
                android:textSize="14sp"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/shivering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Shivering"/>

            <CheckBox
                android:id="@+id/red_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Red belly"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/red_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Red shoulders"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/red_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Red ears"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/red_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Red shunks"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/abortion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abortion"
                android:textSize="14sp"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/vesicle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Vesicles on the hooves"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/vesicle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Vesicles on the mouth"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/vesicle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Vesicles on inside the mouth"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/vesicle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Vesicles on the udder"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/skin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skin Lesions"
                android:textSize="14sp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/lesion"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_button"
                android:gravity="top"
                android:hint="Please provide a description of the lesion"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textSize="14sp"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None of these"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/othersText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_button"
                android:gravity="top"
                android:hint="Please provide any other symptoms"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button_2"
            android:text="Back"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/bg_button"
            android:text="next"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>